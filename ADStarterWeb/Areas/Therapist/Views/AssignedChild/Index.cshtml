<!-- Areas/Therapist/Views/AssignedChild/Index.cshtml -->
@model List<ADStarter.Models.ViewModels.AssignedChildViewModel>

@{
    ViewData["Title"] = "Assigned Children";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-body">
    <div class="container-fluid">
        <div class="page-title">
            <h3>Assigned Children</h3>
        </div>
    </div>

    <div class="container mt-4">
        <div class="card">
            <div class="card-header">
                <h5>Children List</h5>
            </div>
            <div class="card-body">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Child Name</th>
                            <th>Age</th>
                            <th>C-Step</th>
                            <th>Gender</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ChildName</td>
                                <td>@item.Age</td>
                                <td>@item.CStep</td>
                                <td>@item.Gender</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
