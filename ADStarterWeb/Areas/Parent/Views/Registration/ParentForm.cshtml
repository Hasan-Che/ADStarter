@model Parent

@{
    ViewData["Title"] = "Parent Registration Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-body">
    <div class="container-fluid">
        <div class="page-title">
            <h3>Parent Registration Form</h3>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-body">
                        <form asp-action="ParentForm" method="post" class="needs-validation" novalidate>
                            <div id="step-forms">
                                @Html.Partial("FatherForm", Model)
                                @Html.Partial("MotherForm", Model)
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function showMotherForm() {
            document.getElementById('father-form').style.display = 'none';
            document.getElementById('mother-form').style.display = 'block';
        }

        function showFatherForm() {
            document.getElementById('mother-form').style.display = 'none';
            document.getElementById('father-form').style.display = 'block';
        }
    </script>
}
