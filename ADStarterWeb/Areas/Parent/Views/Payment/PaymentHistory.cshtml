@model IEnumerable<ADStarter.Models.Payment>

@{
    ViewData["Title"] = "Payment History";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-body">
    <div class="container-fluid">
        <div class="page-title">
            <div class="row">
                <div class="col-6">
                    <h3>Payment History</h3>
                </div>
                <div class="col-6">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a asp-controller="Dashboard" asp-action="Index">
                                <svg class="stroke-icon">
                                    <use href="../assets/svg/icon-sprite.svg#stroke-home"></use>
                                </svg>
                            </a>
                        </li>
                        <li class="breadcrumb-item">Billing</li>
                        <li class="breadcrumb-item active">Payment History</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header pb-0 card-no-border">
                    <h4>View Your Payment History</h4>
                    <span></span>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-dashed display" id="payment-history-table">
                            <thead>
                                <tr>
                                    <th>Child Name</th>
                                    <th>Invoice ID</th>
                                    <th>Payment ID</th>
                                    <th>Payment Date</th>
                                    <th>Amount (RM)</th>
                                    <th>Balance</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                            @foreach (var payment in Model)
                            {
                                <tr>
                                    <td>@payment.Child?.c_name</td>
                                    <td>@payment.invoice_ID</td>
                                    <td>@payment.pay_ID</td>
                                    <td>@payment.pay_date.ToShortDateString()</td>
                                    <td>@payment.pay_amount</td>
                                    <td>@payment.pay_balance</td>
                                    <td>@payment.pay_desc</td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#payment-history-table').DataTable();
        });
    </script>
}
