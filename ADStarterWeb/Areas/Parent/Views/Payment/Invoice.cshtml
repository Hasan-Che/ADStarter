@{
    ViewData["Title"] = "Billing - Invoices";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .BorderLess {
        border: none;
    }
</style>
<div class="page-body" ng-controller="HomeInvoice">
    <div class="container-fluid">
        <div class="page-title">
            <div class="row">
                <div class="col-6">
                    <h3>Invoices</h3>
                </div>
                <div class="col-6">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a asp-controller="Dashboard" asp-action="Index">
                                <svg class="stroke-icon">
                                    <use href="../assets/svg/icon-sprite.svg#stroke-home"></use>
                                </svg>
                            </a>
                        </li>
                        <li class="breadcrumb-item"> Billing </li>
                        <li class="breadcrumb-item active"> Invoices </li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="card">
            <div class="card-header">
                Invoice
                <strong>01/01/01/2018</strong>
                <span class="float-right"> <strong>Status:</strong> Pending</span>
            </div>
            <div class="card-body">
                <div class="row mb-4">
                    <div class="col-sm-6">
                        <div>
                            <strong>ADventure Rehabilitation Center</strong>
                        </div>
                        <div>Madalinskiego 8</div>
                        <div>71-101 Szczecin, Poland</div>
                        <div>Email: info@webz.com.pl</div>
                        <div>Phone: +48 444 666 3333</div>
                    </div>

                    <div class="col-sm-6">
                        <div class="float-right">
                            <div>
                                <input type="text" class="BorderLess" placeholder="Customer Name">
                            </div>
                            <div>
                                <div><textarea class="BorderLess" placeholder="Address"></textarea></div>
                            </div>
                            <div>
                                <input type="number" class="BorderLess" placeholder="Phone No">
                            </div>
                        </div>
                    </div>
                </div>

                <div class="table-responsive-sm">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th class="center">#</th>
                                <th>Item</th>
                                <th>Description</th>
                                <th class="right">Unit Cost</th>
                                <th class="center">Session Quantity</th>
                                <th class="right">Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td class="center">1</td>
                                <td class="left strong">
                                    <select name="programs">
                                        <option>--Select--</option>
                                    </select>
                                </td>
                                <td class="left">
                                    <select name="sessions">
                                        <option>--Select--</option>
                                    </select>
                                </td>
                                <td class="right"><input type="text" class="BorderLess" placeholder="Unit Cost" readonly></td>
                                <td class="center"><input type="number" class="BorderLess" placeholder="Quantity"></td>
                                <td class="right"><input type="text" class="BorderLess" placeholder="Total" readonly></td>
                            </tr>
                            <tr>
                                <td>
                                    <a href="#"><i class="fa fa-plus"></i></a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="row"></div>
                <div class="col-lg-4 col-sm-5"></div>

                <div class="col-lg-4 col-sm-5 ml-auto">
                    <table class="table table-clear">
                        <tbody>
                            <tr>
                                <td class="left">
                                    <strong>Subtotal</strong>
                                </td>
                                <td class="right">$8.497,00</td>
                            </tr>
                            <tr>
                                <td class="left">
                                    <strong>Discount (20%)</strong>
                                </td>
                                <td class="right">$1,699,40</td>
                            </tr>
                            <tr>
                                <td class="left">
                                    <strong>VAT (10%)</strong>
                                </td>
                                <td class="right">$679,76</td>
                            </tr>
                            <tr>
                                <td class="left">
                                    <strong>Total</strong>
                                </td>
                                <td class="right">
                                    <strong>$7.477,36</strong>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
    $(document).ready(function(){
        // Fetch Programs
        $.ajax({
            url: '@Url.Action("GetPrograms", "Payment")',
            type: 'GET',
            dataType: 'json',
            success: function(data) {
                var programDropdown = $('select[name="programs"]');
                programDropdown.empty();
                programDropdown.append('<option value="">--Select--</option>');
                $.each(data, function(index, program) {
                    programDropdown.append('<option value="' + program.prog_ID + '">' + program.prog_name + '</option>');
                });
            },
            error: function(xhr, status, error) {
                console.error("Error fetching programs: " + error);
            }
        });

        // Fetch Session Prices on Program Change
        $('select[name="programs"]').change(function() {
            var programId = $(this).val();
            if (programId) {
                $.ajax({
                    url: '@Url.Action("GetSessionPrices", "Payment")',
                    type: 'GET',
                    dataType: 'json',
                    data: { programId: programId },
                    success: function(data) {
                        var sessionDropdown = $('select[name="sessions"]');
                        sessionDropdown.empty();
                        sessionDropdown.append('<option value="">--Select--</option>');
                        $.each(data, function(index, session) {
                            sessionDropdown.append('<option value="' + session.session_ID + '">' + session.session_name + ' (' + session.session_day + ') - $' + session.sp_price + '</option>');
                        });
                    },
                    error: function(xhr, status, error) {
                        console.error("Error fetching session prices: " + error);
                    }
                });
            } else {
                $('select[name="sessions"]').empty();
                $('select[name="sessions"]').append('<option value="">--Select--</option>');
            }
        });
    });
</script>

}
