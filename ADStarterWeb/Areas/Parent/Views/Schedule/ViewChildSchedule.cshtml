</div>

@section Scripts{
    <!-- FullCalendar CSS from CDN -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/5.10.1/main.min.css" rel="stylesheet" />

    <!-- FullCalendar JS from CDN -->
    <script src="~/assets/js/calendar/fullcalendar.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var calendarEl = document.getElementById('calendar');
            var viewScheduleButton = document.getElementById('viewScheduleButton');
            var childNameHeader = document.getElementById('childNameHeader');
            var childIdSelect = document.getElementById('childId');

            viewScheduleButton.addEventListener('click', function () {
                var childId = childIdSelect.value;
                if (childId) {
                    fetch(`/Schedule/GetSchedules?childId=${childId}`)
                        .then(response => response.json())
                        .then(events => {
                            var calendar = new FullCalendar.Calendar(calendarEl, {
                                initialView: 'dayGridMonth',
                                events: events
                            });
                            calendar.render();

                            // Optionally, you can set the child's name in the header
                            var selectedChildName = childIdSelect.options[childIdSelect.selectedIndex].text;
                            childNameHeader.textContent = "Schedule for " + selectedChildName;
                        })
                        .catch(error => console.error('Error fetching event data:', error));
                }
            });
        });
    </script>
}
 *@