@model List<ADStarter.Models.ViewModels.ChildScheduleViewModel>
@{
    ViewData["Title"] = "Child Schedules";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-body">
    <div class="container-fluid">
        <div class="page-title">
            <div class="row">
                <div class="col-6">
                    <h3>Child Schedules</h3>
                </div>
                <div class="col-6">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a asp-controller="Dashboard" asp-action="Index">
                                <svg class="stroke-icon">
                                    <use href="~/assets/svg/icon-sprite.svg#stroke-home"></use>
                                </svg>
                            </a>
                        </li>
                        <li class="breadcrumb-item active">Child Schedules</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        @foreach (var childSchedule in Model)
        {
            <div class="card mb-4">
                <div class="card-body">
                    <h4>@(childSchedule.ChildName)'s Schedule</h4>
                    @if (childSchedule.Schedules != null && childSchedule.Schedules.Any())
                    {
                        @* Order schedules by session date, earliest first *@
                        var orderedSchedules = childSchedule.Schedules
                        .Where(s => s.SessionDate.Date >= DateTime.Today) // Filter out past dates
                        .OrderBy(s => s.SessionDate)
                        .ToList();

                        @if (orderedSchedules.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Program Name</th>
                                            <th>Therapist Name</th>
                                            <th>Slot Time</th>
                                            <th>Session Date</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var schedule in orderedSchedules)
                                        {
                                            <tr>
                                                <td>@schedule.ProgramName</td>
                                                <td>@schedule.TherapistName</td>
                                                <td>@schedule.SlotTime</td>
                                                <td>@schedule.SessionDate.ToString("yyyy-MM-dd")</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <p>No upcoming schedules available for this child.</p>
                        }
                    }
                    else
                    {
                        <p>No schedules available for this child.</p>
                    }
                </div>
            </div>
        }
    </div>
</div>
