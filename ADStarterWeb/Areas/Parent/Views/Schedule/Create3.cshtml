@model ADStarter.Models.ViewModels.Schedule2ViewModel
@{
    ViewData["Title"] = "Create Program 2";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-body">
    <div class="container-fluid">
        <div class="page-title">
            <div class="row">
                <div class="col-6">
                    <h3>Full Assessment</h3>
                </div>
                <div class="col-6">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a asp-controller="Dashboard" asp-action="Index">
                                <svg class="stroke-icon">
                                    <use href="../assets/svg/icon-sprite.svg#stroke-home"></use>
                                </svg>
                            </a>
                        </li>
                        <li class="breadcrumb-item">Program Controls</li>
                        <li class="breadcrumb-item active">Create Program 2</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid starts-->
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-header">
                        <h5>Program Registration Form</h5>
                        <span>Fill out the form below to enroll in a new program.</span>
                    </div>
                    <div class="card-body">
                        <form id="programForm" class="needs-validation" novalidate method="post" asp-action="Create3">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label class="form-label" for="Child_ID">Child</label>
                                    <select class="form-select" asp-for="Child_ID" required>
                                        <option selected disabled value="">Choose...</option>
                                        @foreach (var child in ViewBag.ActiveChildren)
                                        {
                                            <option value="@child.c_myKid">@child.c_name</option>
                                        }
                                    </select>
                                    <div class="invalid-feedback">Please select a child.</div>
                                </div>
                            </div>

                            <div class="row g-3 mt-3">
                                <div class="col-md-6">
                                    <label class="form-label">Assessment Sessions</label>
                                    <span>The first 3 dates chosen are for 3 sessions of assessment:</span>
                                </div>
                            </div>

                            @for (int i = 0; i < 3; i++)
                            {
                                <div class="row g-3 mt-3">
                                    <div class="col-md-3">
                                        <label class="form-label" for="SessionDates_@(i)">Select Date</label>
                                        <input type="date" class="form-control" id="SessionDates_@(i)" name="SessionDates[@(i)]" asp-for="SessionDates[i]" required>
                                        <div class="invalid-feedback">Please select a date.</div>
                                    </div>
                                    <div class="col-md-3">
                                        <label class="form-label" for="Slot_IDs_@(i)">Slot</label>
                                        <select class="form-select" id="Slot_IDs_@(i)" name="Slot_IDs[@(i)]" asp-for="Slot_IDs[i]" required>
                                            <option selected disabled value="">Choose...</option>
                                            <option value="1">9.00 am - 10.00 am</option>
                                            <option value="2">10.00 am - 11.00 am</option>
                                            <option value="3">11.00 am - 12.00 pm</option>
                                            <option value="4">2.00 pm - 3.00 pm</option>
                                            <option value="5">3.00 pm - 4.00 pm</option>
                                            <option value="6">4.00 pm - 5.00 pm</option>
                                        </select>
                                        <div class="invalid-feedback">Please select a slot.</div>
                                    </div>
                                </div>
                            }

                            <div class="row g-3 mt-3">
                                <div class="col-md-6">
                                    <label class="form-label">Full Development Report Session</label>
                                    <span>The last date chosen is for 1 session of full development report:</span>
                                </div>
                            </div>

                            <div class="row g-3 mt-3">
                                <div class="col-md-3">
                                    <label class="form-label" for="SessionDates_3">Select Date</label>
                                    <input type="date" class="form-control" id="SessionDates_3" name="SessionDates[3]" asp-for="SessionDates[3]" required>
                                    <div class="invalid-feedback">Please select a date.</div>
                                </div>
                                <div class="col-md-3">
                                    <label class="form-label" for="Slot_IDs_3">Slot</label>
                                    <select class="form-select" id="Slot_IDs_3" name="Slot_IDs[3]" asp-for="Slot_IDs[3]" required>
                                        <option selected disabled value="">Choose...</option>
                                        <option value="1">9.00 am - 10.00 am</option>
                                        <option value="2">10.00 am - 11.00 am</option>
                                        <option value="3">11.00 am - 12.00 pm</option>
                                        <option value="4">2.00 pm - 3.00 pm</option>
                                        <option value="5">3.00 pm - 4.00 pm</option>
                                        <option value="6">4.00 pm - 5.00 pm</option>
                                    </select>
                                    <div class="invalid-feedback">Please select a slot.</div>
                                </div>
                            </div>

                            <div class="row g-3 mt-3">
                                <div class="col-md-6">
                                    <button class="btn btn-primary" type="submit">Submit form</button>
                                    <button type="button" class="btn btn-secondary ms-2" onclick="clearForm()">Clear form</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid Ends-->
</div>

@section Scripts {
    <script>
        function clearForm() {
            document.getElementById('programForm').reset();
            document.querySelectorAll('.form-control').forEach(function (element) {
                element.classList.remove('is-valid');
                element.classList.remove('is-invalid');
            });
        }

        document.addEventListener("DOMContentLoaded", function () {
            const form = document.getElementById('programForm');
            const dateInputs = form.querySelectorAll('input[type="date"]');

            // Function to set the minimum date for all date inputs to tomorrow
            function setMinDates() {
                const today = new Date();
                today.setHours(0, 0, 0, 0);
                const tomorrow = new Date(today);
                tomorrow.setDate(today.getDate() + 1);

                const yyyy = tomorrow.getFullYear();
                const mm = String(tomorrow.getMonth() + 1).padStart(2, '0');
                const dd = String(tomorrow.getDate()).padStart(2, '0');
                const minDate = `${yyyy}-${mm}-${dd}`;

                dateInputs.forEach((input, index) => {
                    input.setAttribute('min', index === 0 ? minDate : '');
                });
            }

            setMinDates();

            // Function to update the minimum date for subsequent date inputs
            function updateMinDates() {
                dateInputs.forEach((input, index) => {
                    input.addEventListener('change', function () {
                        const selectedDate = new Date(this.value);
                        if (index + 1 < dateInputs.length) {
                            const nextInput = dateInputs[index + 1];
                            selectedDate.setDate(selectedDate.getDate() + 1);
                            const yyyy = selectedDate.getFullYear();
                            const mm = String(selectedDate.getMonth() + 1).padStart(2, '0');
                            const dd = String(selectedDate.getDate()).padStart(2, '0');
                            const nextMinDate = `${yyyy}-${mm}-${dd}`;
                            nextInput.setAttribute('min', nextMinDate);
                        }
                    });
                });
            }

            updateMinDates();

            form.addEventListener('submit', function (event) {
                if (!form.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                    alert('Please fill in all required fields.');
                }

                form.classList.add('was-validated');
            }, false);
        });
    </script>
}
