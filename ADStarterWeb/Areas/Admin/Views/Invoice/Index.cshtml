@model IEnumerable<ADStarter.Models.Invoice>

@{
    ViewData["Title"] = "All Invoices";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var request = Context.Request;
    bool showAll = request.Query["showAll"] == "true";
}

@section Scripts {
    <script>
        $(document).ready(function() {
            // Initialize DataTable
            $('#invoices-table').DataTable();

            // Set the toggle button state based on the showAll variable
            $('#toggleInvoices').prop('checked', @showAll.ToString().ToLower());

            // Handle the toggle button change event
            $('#toggleInvoices').on('change', function() {
                var showAll = $(this).is(':checked');
                window.location.href = '@Url.Action("Index", "Invoice", new { Area = "Admin" })' + '?showAll=' + showAll;
            });

            // Edit button click event
            $('.edit-button').on('click', function() {
                var invoiceId = $(this).data('id');
                var row = $(this).closest('tr');
                var childName = row.find('td:eq(1)').text();
                var programName = row.find('td:eq(2)').text();
                var scheduleDate = row.find('td:eq(3)').text();
                var dueDate = row.find('td:eq(4)').text();
                var invoiceAmount = row.find('td:eq(5)').text();

                $('#childName').text(childName);
                $('#programName').text(programName);
                $('#scheduleDate').val(new Date(scheduleDate).toISOString().substring(0, 10));
                $('#dueDate').val(new Date(dueDate).toISOString().substring(0, 10));
                $('#invoiceAmount').val(invoiceAmount);
                $('#saveInvoiceChanges').data('id', invoiceId);

                // Open the modal
                $('#editInvoiceModal').modal('show');
            });

            // Save changes button click event
            $('#saveInvoiceChanges').on('click', function() {
                var invoiceId = $(this).data('id');
                var scheduleDate = $('#scheduleDate').val();
                var dueDate = $('#dueDate').val();
                var invoiceAmount = $('#invoiceAmount').val();

                $.ajax({
                    url: '@Url.Action("EditInvoice", "Invoice", new { Area = "Admin" })',
                    type: 'POST',
                    data: {
                        invoiceId: invoiceId,
                        scheduleDate: scheduleDate,
                        dueDate: dueDate,
                        amount: invoiceAmount
                    },
                    success: function(response) {
                        if (response.success) {
                            location.reload();
                        } else {
                            alert(response.message);
                        }
                    },
                    error: function(xhr, status, error) {
                        console.error('Error saving invoice changes:', error);
                    }
                });
            });
        });

        function confirmDelete(id) {
            if (confirm('Are you sure you want to delete this invoice?')) {
                $.ajax({
                    url: '@Url.Action("Delete", "Invoice", new { Area = "Admin" })',
                    type: 'DELETE',
                    data: { id: id },
                    headers: {
                        RequestVerificationToken: $('input:hidden[name="__RequestVerificationToken"]').val()
                    },
                    success: function(response) {
                        location.reload();
                    },
                    error: function(xhr, status, error) {
                        console.error('Error deleting invoice:', error);
                    }
                });
            }
        }
    </script>
}

<div class="page-body">
    <div class="container-fluid">
        <div class="page-title">
            <div class="row">
                <div class="col-6">
                    <h3>All Invoices</h3>
                </div>
                <div class="col-6">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a asp-controller="Dashboard" asp-action="Index">
                                <svg class="stroke-icon">
                                    <use href="~/assets/svg/icon-sprite.svg#stroke-home"></use>
                                </svg>
                            </a>
                        </li>
                        <li class="breadcrumb-item">Billing</li>
                        <li class="breadcrumb-item">Invoices</li>
                        <li class="breadcrumb-item active">All Invoices</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header pb-0 card-no-border">
                    <h4>View And Manage Your Invoices</h4>
                    <span></span>
                </div>
                <div class="card-body">
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" id="toggleInvoices" @(showAll ? "checked" : "")>
                        <label class="form-check-label" for="toggleInvoices">Show All Invoices</label>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-dashed display" id="invoices-table">
                            <thead>
                                <tr>
                                    <th>Invoice ID</th>
                                    <th>Child Name</th>
                                    <th>Program Name</th>
                                    <th>Session Date</th>
                                    <th>Due Date</th>
                                    <th>Amount (RM)</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var invoice in Model)
                                {
                                    <tr>
                                        <td>@invoice.invoice_ID</td>
                                        <td>@invoice.Child.c_name</td>
                                        <td>@invoice.Schedule.Program.prog_name</td>
                                        <td>@invoice.Schedule.session_datetime.Date.ToShortDateString()</td>
                                        <td>@invoice.due_date.ToShortDateString()</td>
                                        <td>@invoice.invoice_amount.ToString("0.00")</td>
                                        <td>
                                            @if (invoice.Payments.Any(p => p.pay_desc == "Paid"))
                                            {
                                                <span>Paid</span>
                                            }
                                            else
                                            {
                                                <ul class="action text-center">
                                                    <li class="edit">
                                                        <button class="btn btn-outline-primary edit-button" data-id="@invoice.invoice_ID">
                                                            <i class="icon-pencil-alt"></i>
                                                        </button>
                                                    </li>
                                                    <li class="delete">
                                                        <button class="btn btn-outline-danger" type="button" onclick="confirmDelete('@invoice.invoice_ID')">
                                                            <i class="icon-trash"></i>
                                                        </button>
                                                    </li>
                                                </ul>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Edit Invoice Modal -->
