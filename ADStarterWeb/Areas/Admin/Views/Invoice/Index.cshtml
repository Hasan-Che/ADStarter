                <h5 class="modal-title" id="editInvoiceModalLabel">Edit Invoice</h5>
                <button class="btn-close" type="button" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <div class="card float-right">
                        <div class="card-header">
                            <span>
                                <strong>Invoice Creation: </strong>
                                <span id="invoiceDate"></span>
                            </span>
                            <span>
                                <strong>Payment Due By: </strong>
                                <span id="paymentDueDate"></span>
                            </span>
                        </div>
                        <div class="card-body">
                            <div class="row mb-4">
                                <div class="col-sm-6">
                                    <div style="margin-bottom: 8px;">
                                        <strong>ADventure Rehabilitation Center</strong>
                                    </div>
                                    <div style="margin-bottom: 8px;">MA1, Kolej Tun Dr Ismail</div>
                                    <div style="margin-bottom: 8px;">Skudai, 80990 Johor Bahru, Johor</div>
                                    <div style="margin-bottom: 8px;">Email: info@ADventure.com.my</div>
                                    <div style="margin-bottom: 8px;">Phone: +60 123 456 789</div>
                                </div>
                            </div>
                            <div class="table-responsive">
                                <table class="table table-borderless">
                                    <tbody>
                                        <tr>
                                            <td class="left"><strong>Child Name</strong></td>
                                            <td class="right"><div id="childName"></div></td>
                                        </tr>
                                        <tr>
                                            <td class="left"><strong>Program Name</strong></td>
                                            <td class="right"><div id="programName"></div></td>
                                        </tr>
                                        <tr>
                                            <td class="left"><strong>Schedule Date</strong></td>
                                            <td class="right">
                                                <input type="date" id="scheduleDate" class="form-control" />
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="left"><strong>Due Date</strong></td>
                                            <td class="right">
                                                <input type="date" id="dueDate" class="form-control" />
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="left"><strong>Invoice Amount (RM)</strong></td>
                                            <td class="right">
                                                <input type="number" id="invoiceAmount" class="form-control" />
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="card-footer bg-white">
                            <button class="btn btn-primary" id="saveInvoiceChanges">Save Changes</button>
                            <button class="btn btn-secondary" type="button" data-bs-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
