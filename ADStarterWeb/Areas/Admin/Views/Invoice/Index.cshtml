@model IEnumerable<ADStarter.Models.Invoice>

@{
    ViewData["Title"] = "All Invoices";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-body">
    <div class="container-fluid">
        <div class="page-title">
            <div class="row">
                <div class="col-6">
                    <h3>All Invoices</h3>
                </div>
                <div class="col-6">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a asp-controller="Dashboard" asp-action="Index">
                                <svg class="stroke-icon">
                                    <use href="~/assets/svg/icon-sprite.svg#stroke-home"></use>
                                </svg>
                            </a>
                        </li>
                        <li class="breadcrumb-item">Billing</li>
                        <li class="breadcrumb-item">Invoices</li>
                        <li class="breadcrumb-item active">All Invoices</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header pb-0 card-no-border">
                    <h4>View And Manage Your Invoices</h4>
                    <span></span>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-dashed display" id="invoices-table">
                            <thead>
                                <tr>
                                    <th>Invoice ID</th>
                                    <th>Child Name</th>
                                    <th>Program Name</th>
                                    <th>Session Date</th>
                                    <th>Due Date</th>
                                    <th>Amount (RM)</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var invoice in Model)
                                {
                                    <tr>
                                        <td>@invoice.invoice_ID</td>
                                        <td>@invoice.Child.c_name</td>
                                        <td>@invoice.Schedule.Program.prog_name</td>
                                        <td>@invoice.Schedule.session_datetime.Date.ToShortDateString()</td>
                                        <td>@invoice.due_date.ToShortDateString()</td>
                                        <td>@invoice.invoice_amount.ToString("0.00")</td>
                                        <td>
                                            <ul class="action text-center">
                                                <li class="edit">
                                                    <button class="btn btn-outline-primary edit-button" data-id="@invoice.invoice_ID" data-toggle="modal" data-target="#editInvoiceModal">
                                                        <i class="icon-pencil-alt"></i>
                                                    </button>
                                                </li>
                                                <li class="delete">
                                                    <button class="btn btn-outline-danger" type="button" onclick="confirmDelete('@invoice.invoice_ID')">
                                                        <i class="icon-trash"></i>
                                                    </button>
                                                </li>
                                            </ul>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Edit Invoice Modal -->
<div class="modal fade" id="editInvoiceModal" tabindex="-1" aria-labelledby="editInvoiceModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editInvoiceModalLabel">Edit Invoice</h5>
                <button class="btn-close" type="button" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <div class="card float-right">
                        <div class="card-header">
                            <span>
                                <strong>Invoice Creation: </strong>
                                <span id="invoiceDate"></span>
                            </span>
                            <span>
                                <strong>Payment Due By: </strong>
                                <span id="paymentDueDate"></span>
                            </span>
                        </div>
                        <div class="card-body">
                            <div class="row mb-4">
                                <div class="col-sm-6">
                                    <div style="margin-bottom: 8px;">
                                        <strong>ADventure Rehabilitation Center</strong>
                                    </div>
                                    <div style="margin-bottom: 8px;">MA1, Kolej Tun Dr Ismail</div>
                                    <div style="margin-bottom: 8px;">Skudai, 80990 Johor Bahru, Johor</div>
                                    <div style="margin-bottom: 8px;">Email: info@ADventure.com.my</div>
                                    <div style="margin-bottom: 8px;">Phone: +60 123 456 789</div>
                                </div>
                            </div>
                            <div class="table-responsive">
                                <table class="table table-dashed">
                                    <thead>
                                        <tr>
                                            <th>Child Name</th>
                                            <th>Program Name</th>
                                            <th>Session Date</th>
                                            <th>Due Date</th>
                                            <th>Amount (RM)</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td><input type="textarea" class="form-control input-primary BorderLess" id="modalChildName" readonly></td>
                                            <td><input type="textarea" class="form-control input-primary BorderLess" id="modalProgramName" readonly></td>
                                            <td><input type="date" class="form-control input-primary BorderLess" id="modalScheduleDate"></td>
                                            <td><input type="date" class="form-control input-primary BorderLess" id="modalDueDate"></td>
                                            <td><input type="number" class="form-control input-primary BorderLess" id="modalAmount"></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" type="button" data-bs-dismiss="modal">Cancel</button>
                <button class="btn btn-primary" type="button" id="saveChangesButton">Save changes</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#invoices-table').DataTable();

            // Populate and show the edit modal
            $('.edit-button').on('click', function() {
                var invoiceId = $(this).data('id');
                var invoiceRow = $(this).closest('tr');
                var childName = invoiceRow.find('td').eq(1).text();
                var programName = invoiceRow.find('td').eq(2).text();
                var scheduleDate = invoiceRow.find('td').eq(3).text();
                var dueDate = invoiceRow.find('td').eq(4).text();
                var amount = invoiceRow.find('td').eq(5).text();

                // Format the dates for the input fields
                var formattedScheduleDate = formatDateForInput(new Date(scheduleDate));
                var formattedDueDate = formatDateForInput(new Date(dueDate));

                // Populate the modal fields
                $('#invoiceDate').text(scheduleDate);
                $('#paymentDueDate').text(dueDate);
                $('#modalChildName').val(childName);
                $('#modalProgramName').val(programName);
                $('#modalScheduleDate').val(formattedScheduleDate);
                $('#modalDueDate').val(formattedDueDate);
                $('#modalAmount').val(amount);

                $('#editInvoiceModal').modal('show');
            });

            // Handle save changes button click
            $('#saveChangesButton').on('click', function() {
                var invoiceId = $('.edit-button[data-id]').data('id');
                var updatedScheduleDate = $('#modalScheduleDate').val();
                var updatedDueDate = $('#modalDueDate').val();
                var updatedAmount = $('#modalAmount').val();

                // Perform the AJAX request to save the changes
                $.ajax({
                    url: '@Url.Action("EditInvoice", "Invoice", new { Area = "Admin" })',
                    type: 'POST',
                    data: {
                        invoiceId: invoiceId,
                        scheduleDate: updatedScheduleDate,
                        dueDate: updatedDueDate,
                        amount: updatedAmount
                    },
                    success: function(response) {
                        if (response.success) {
                            // Handle the success response
                            $('#editInvoiceModal').modal('hide');
                            location.reload();
                        } else {
                            alert(response.message || 'An error occurred while updating the invoice.');
                        }
                    }
                });
            });

            // Helper function to format date for input[type=date]
            function formatDateForInput(date) {
                var d = new Date(date),
                    month = '' + (d.getMonth() + 1),
                    day = '' + d.getDate(),
                    year = d.getFullYear();

                if (month.length < 2) 
                    month = '0' + month;
                if (day.length < 2) 
                    day = '0' + day;

                return [year, month, day].join('-');
            }

            function confirmDelete(id) {
            if (confirm('Are you sure you want to delete this invoice?')) {
                window.location.href = '@Url.Action("Delete", "Invoice", new { Area = "Admin" })?id=' + id;
            }
        }
        });
    </script>
}
