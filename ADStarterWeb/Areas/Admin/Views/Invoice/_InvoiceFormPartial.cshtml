@model ADStarter.Models.InvoiceFormViewModel

<div class="card-header">
    Invoice
    <strong>@Model.Schedule.session_datetime.ToString("d")</strong>
    <span class="float-right"><strong>Status:</strong> <span id="invoiceStatus">Pending</span></span>
</div>
<div class="card-body">
    <div class="row mb-4">
        <div class="col-sm-6">
            <div style="margin-bottom: 8px;">
                <strong>ADventure Rehabilitation Center</strong>
            </div>
            <div style="margin-bottom: 8px;">MA1, Kolej Tun Dr Ismail</div>
            <div style="margin-bottom: 8px;">Skudai, 80990 Johor Bahru, Johor</div>
            <div style="margin-bottom: 8px;">Email: info@ADventure.com.my</div>
            <div style="margin-bottom: 8px;">Phone: +60 123 456 789</div>
        </div>
        <div class="col-sm-6">
            <div class="float-right">
                <div style="margin-bottom: 8px;">
                    <input type="text" class="form-control input-primary BorderLess" value="@Model.Child.Parent.f_name" placeholder="Parent Name" readonly>
                </div>
                <div style="margin-bottom: 8px;">
                    <textarea class="form-control input-primary BorderLess" placeholder="Address" readonly>@Model.Child.Parent.f_address</textarea>
                </div>
                <div style="margin-bottom: 8px;">
                    <input type="text" class="form-control input-primary BorderLess" value="@Model.Child.Parent.f_phoneNum" placeholder="Phone No" readonly>
                </div>
            </div>
        </div>
    </div>
    <div class="table-responsive">
        <table class="table table-dashed">
            <thead>
                <tr>
                    <th class="center">#</th>
                    <th>Program</th>
                    <th>Summary</th>
                    <th>Session Date</th>
                    <th class="right">Fee</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td class="center">1</td>
                    <td class="left strong">
                        <input type="text" class="form-control BorderLess" value="@Model.Schedule.Program.prog_name" readonly />
                    </td>
                    <td class="left">
                        <textarea class="form-control BorderLess" readonly>@Model.Schedule.Program.prog_summary</textarea>
                    </td>
                    <td class="left">
                        <textarea class="form-control BorderLess" readonly>@Model.Schedule.session_datetime</textarea>
                    </td>
                    <td class="right">
                        @{
                            var fee = Model.Schedule.session_datetime.DayOfWeek == DayOfWeek.Friday || Model.Schedule.session_datetime.DayOfWeek == DayOfWeek.Saturday
                                ? Model.Schedule.Program.prog_WeekendPrice
                                : Model.Schedule.Program.prog_WeekdayPrice;
                        }
                        <input type="text" class="form-control BorderLess" value="@fee" readonly />
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
<div class="card-footer">
    <div class="row">
        <div class="col-lg-8 col-sm-7"></div>
        <div class="col-lg-4 col-sm-5 ml-auto">
            <table class="table table-clear">
                <tbody>
                    <tr>
                        <td class="left"><strong>Total Fee</strong></td>
                        <td class="right"><span id="totalFee">@fee.ToString("C")</span></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
