@model ADStarter.Models.Child

@{
    ViewData["Title"] = "Assign Therapist";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-body">
    <div class="container-fluid">
        <div class="page-title">
            <div class="row">
                <div class="col-6">
                    <h3>Assign Therapist</h3>
                </div>
                <div class="col-6">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a asp-controller="Dashboard" asp-action="Index">
                                <svg class="stroke-icon">
                                    <use href="../assets/svg/icon-sprite.svg#stroke-home"></use>
                                </svg>
                            </a>
                        </li>
                        <li class="breadcrumb-item">Children Management</li>
                        <li class="breadcrumb-item">
                            <a asp-action="Index">Children List</a>
                        </li>
                        <li class="breadcrumb-item active">Assign Therapist</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <div class="container mt-4">
        <div class="card">
            <div class="card-body">
                <h2>Assign Therapist</h2>

                <form asp-controller="AdminChild" asp-action="AssignTherapist" method="post">
                    <input type="hidden" name="childId" value="@Model.c_myKid" />

                    <div class="form-group">
                        <label for="therapistId">Select Therapist:</label>
                        <select id="therapistId" name="therapistId" class="form-control">
                            <option value="" disabled selected>Not Assigned</option>
                            @foreach (var therapist in ViewBag.Therapists)
                            {
                                <option value="@therapist.t_ID">@therapist.t_name</option>
                            }
                        </select>
                    </div>

                    <div class="row mt-3">
                        <div class="col-md-6">
                            <button type="submit" class="btn btn-primary btn-block">Save</button>
                        </div>
                        <div class="col-md-6 mt-md-0 mt-2">
                            <a asp-controller="AdminChild" asp-action="Index" class="btn btn-secondary btn-block">Cancel</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
