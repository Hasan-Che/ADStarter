@model List<ADStarter.Models.Child>

@{
    ViewData["Title"] = "Children List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-body">
    <div class="container-fluid">
        <div class="page-title">
            <div class="row">
                <div class="col-6">
                    <h3>Children List</h3>
                </div>
                <div class="col-6">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a asp-controller="Dashboard" asp-action="Index">
                                <svg class="stroke-icon">
                                    <use href="../assets/svg/icon-sprite.svg#stroke-home"></use>
                                </svg>
                            </a>
                        </li>
                        <li class="breadcrumb-item">Children Management</li>
                        <li class="breadcrumb-item active">Children List</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <div class="container mt-4">
        <div class="card">
            <div class="card-body">
                <table class="table">
                    <thead>
                        <tr>
                             <th>Name</th>
                            <th>MyKid</th>
                            <th>Age</th>
                            <th>Gender</th>
                            <th>Date of Birth</th>
                            <th>Nationality</th>
                            <th>Religion</th>
                            <th>Race</th>
                            <th>Parent ID</th>
                            <th>Therapist</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var child in Model)
                        {
                            <tr>
                                <td>@child.c_name</td>
                                <td>@child.c_myKid</td>
                                <td>@child.c_age</td>
                                <td>@child.c_gender</td>
                                <td>@child.c_dob.ToString("yyyy-MM-dd")</td>
                                <td>@child.c_nationality</td>
                                <td>@child.c_religion</td>
                                <td>@child.c_race</td>
                                <td>@child.parent_ID</td>
                                <td>@(child.Therapist != null ? child.Therapist.t_name : "Not Assigned")</td>
                                <td>
                                    <a asp-controller="AdminChild" asp-action="AssignTherapist" asp-route-id="@child.c_myKid" class="btn btn-primary"><i class="fa fa-plus"></i>  Assign Therapist</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
