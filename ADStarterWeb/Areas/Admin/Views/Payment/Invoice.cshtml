@{
    ViewData["Title"] = "Billing - Manage Invoices";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .BorderLess {
        border: none;
    }
</style>
<div class="page-body">
    <div class="container-fluid">
        <div class="page-title">
            <div class="row">
                <div class="col-6">
                    <h3>Invoices</h3>
                </div>
                <div class="col-6">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a asp-controller="Dashboard" asp-action="Index">
                                <svg class="stroke-icon">
                                    <use href="../assets/svg/icon-sprite.svg#stroke-home"></use>
                                </svg>
                            </a>
                        </li>
                        <li class="breadcrumb-item"> Billing </li>
                        <li class="breadcrumb-item active"> Invoices </li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="card float-right">
            <div class="card-header">
            Invoice
            <strong>01/01/01/2018</strong>
            <span class="float-right"> <strong>Status:</strong> Pending</span>
            </div>
            <div class="card-body">
            <div class="row mb-4">
                    <div class="col-sm-6">
                        <div>
                            <strong>ADventure Rehabilitation Center</strong>
                        </div>
                        <div>Madalinskiego 8</div>
                        <div>71-101 Szczecin, Poland</div>
                        <div>Email: info@webz.com.pl</div>
                        <div>Phone: +48 444 666 3333</div>
                    </div>

                    <div class="col-sm-6">
                        <div class="float-right">
                            <div>
                                <input type="text" class="BorderLess" placeholder="Customer Name">
                            </div>
                            <div>
                                <div><textarea class="BorderLess" placeholder="Address"></textarea></div>
                            </div>
                            <div>
                                <input type="number" class="BorderLess" placeholder="Phone No">
                            </div>
                        </div>
                    </div>
                </div>

                <div class="table-responsive-sm">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th class="center">#</th>
                                <th>Program</th>
                                <th>Description</th>
                                <th>Session Quantity</th>
                                <th class="right">Unit Cost</th>
                                <th class="center">Quantity</th>
                                <th class="right">Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td class="center">1</td>
                                <td class="left strong">
                                    <select name="programs">
                                        <option>--Select--</option>
                                    </select>
                                </td>
                                <td class="left">
                                    <textarea name="description" class="BorderLess" readonly></textarea>
                                </td>
                                <td class="left">
                                    <select name="sessions">
                                        <option>--Select--</option>
                                    </select>
                                </td>
                                <td class="right">
                                    <input type="text" name="unitCost" class="BorderLess" readonly>
                                </td>
                                <td class="center">
                                    <input type="number" name="quantity" class="BorderLess" placeholder="Quantity" min="1">
                                </td>
                                <td class="right">
                                    <input type="text" name="total" class="BorderLess" readonly>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <a href="#" onclick="addNewRow();"><i class="fa fa-plus"></i></a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer">
                <div class="row">
                    <div class="col-lg-8 col-sm-7"></div> <!-- Adjusted column widths -->
                    <div class="col-lg-4 col-sm-5 ml-auto">
                        <table class="table table-clear">
                            <tbody>
                                <tr>
                                    <td class="left"><strong>Subtotal</strong></td>
                                    <td class="right">$8.497,00</td>
                                </tr>
                                <tr>
                                    <td class="left"><strong>Discount (20%)</strong></td>
                                    <td class="right">$1,699,40</td>
                                </tr>
                                <tr>
                                    <td class="left"><strong>VAT (10%)</strong></td>
                                    <td class="right">$679,76</td>
                                </tr>
                                <tr>
                                    <td class="left"><strong>Total</strong></td>
                                    <td class="right">
                                        <input type="text" name="grandTotal" class="BorderLess" readonly>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
    $(document).ready(function(){
        // Fetch Programs
        $.ajax({
            url: '@Url.Action("GetPrograms", "Payment")',
            type: 'GET',
            dataType: 'json',
            success: function(data) {
                var programDropdown = $('select[name="programs"]');
                programDropdown.empty();
                programDropdown.append('<option value="">--Select--</option>');
                $.each(data, function(index, program) {
                    programDropdown.append('<option value="' + program.prog_ID + '" data-desc="' + program.prog_desc + '">' + program.prog_name + '</option>');
                });
            },
            error: function(xhr, status, error) {
                console.error("Error fetching programs: " + error);
            }
        });

        // Fetch Session Prices on Program Change
        $('select[name="programs"]').change(function() {
            var programId = $(this).val();
            var programDesc = $(this).find(':selected').data('desc');
            $('textarea[name="description"]').val(programDesc);

            if (programId) {
                $.ajax({
                    url: '@Url.Action("GetSessionPrices", "Payment")',
                    type: 'GET',
                    dataType: 'json',
                    data: { programId: programId },
                    success: function(data) {
                        var sessionDropdown = $('select[name="sessions"]');
                        sessionDropdown.empty();
                        sessionDropdown.append('<option value="">--Select--</option>');
                        $.each(data, function(index, session) {
                            var sessionName = session.session_name + ' (' + session.session_day + ')';
                            sessionDropdown.append('<option value="' + session.sp_price + '" data-quantity="' + session.session_bilangan + '">' + sessionName + '</option>');
                        });
                        clearRightColumns();  // Clear right columns when new program is selected
                    },
                    error: function(xhr, status, error) {
                        console.error("Error fetching session prices: " + error);
                    }
                });
            } else {
                clearRightColumns();  // Clear right columns when no program is selected
                $('textarea[name="description"]').val('');
            }
        });

        // Update Unit Cost and Quantity Constraints on Session Change
        $('select[name="sessions"]').change(function() {
            var unitCost = $(this).val();
            var maxQuantity = $(this).find(':selected').data('quantity');
            $('input[name="unitCost"]').val(unitCost);
            $('input[name="quantity"]').attr('max', maxQuantity).val(1).trigger('input');
        });

        // Update Total on Quantity Change
        $('input[name="quantity"]').on('input', function() {
            var unitCost = parseFloat($('input[name="unitCost"]').val());
            var quantity = parseInt($(this).val());
            var maxQuantity = parseInt($(this).attr('max'));
            
            if (quantity < 1) {
                quantity = 1;
                $(this).val(1);
            } else if (quantity > maxQuantity) {
                quantity = maxQuantity;
                $(this).val(maxQuantity);
            }
            
            var total = unitCost * quantity;
            $('input[name="total"]').val(total.toFixed(2));
        });

        // Helper function to clear columns to the right
        function clearRightColumns() {
            $('input[name="unitCost"]').val('');
            $('input[name="quantity"]').val('').attr('max', '');
            $('input[name="total"]').val('');
        }

        // Recalculate Total on other field changes
        $('select[name="sessions"], input[name="unitCost"]').change(function() {
            var unitCost = parseFloat($('input[name="unitCost"]').val());
            var quantity = parseInt($('input[name="quantity"]').val());
            if (quantity && unitCost) {
                var total = unitCost * quantity;
                $('input[name="total"]').val(total.toFixed(2));
            }
        });

        // Function to add a new row
        function addNewRow() {
            // Clone the first row of the table
            var newRow = $('.table-striped tbody tr:first').clone();
            
            // Clear the input fields in the new row
            newRow.find('select[name="programs"]').val('');
            newRow.find('textarea[name="description"]').val('');
            newRow.find('select[name="sessions"]').val('');
            newRow.find('input[name="unitCost"]').val('');
            newRow.find('input[name="quantity"]').val('');
            newRow.find('input[name="total"]').val('');
            
            // Append the new row to the table body
            $('.table-striped tbody').append(newRow);
        }
    });
</script>
}
