@model IEnumerable<ADStarter.Models.Program>

@{
    ViewData["Title"] = "Program List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-body">
    <div class="container-fluid">
        <div class="page-title">
            <div class="row">
                <div class="col-6">
                    <h3>Program List</h3>
                </div>
                <div class="col-6">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a asp-controller="Dashboard" asp-action="Index">
                                <svg class="stroke-icon">
                                    <use href="../assets/svg/icon-sprite.svg#stroke-home"></use>
                                </svg>
                            </a>
                        </li>
                        <li class="breadcrumb-item">Program Controls</li>
                        <li class="breadcrumb-item active">Program List</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid starts-->
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-header">
                        <h5>Programs</h5>
                        <span>List of all available programs.</span>
                    </div>
                    <div class="card-body">
                        <p>
                            <a asp-action="Create" class="btn btn-primary">Create New</a>
                        </p>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.First().prog_name)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.First().prog_desc)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.First().prog_summary)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.prog_name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.prog_desc)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.prog_summary)
                                        </td>
                                        <td>
                                            <a asp-action="Edit" asp-route-id="@item.prog_ID">Edit</a> |
                                            <a asp-action="Delete" asp-route-id="@item.prog_ID">Delete</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid Ends-->
</div>
