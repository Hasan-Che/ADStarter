@model ADStarter.Models.Program

@{
    ViewData["Title"] = "Create Program";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-body">
    <div class="container-fluid">
        <div class="page-title">
            <div class="row">
                <div class="col-6">
                    <h3>Add new program</h3>
                </div>
                <div class="col-6">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a asp-controller="Dashboard" asp-action="Index">
                                <svg class="stroke-icon">
                                    <use href="../assets/svg/icon-sprite.svg#stroke-home"></use>
                                </svg>
                            </a>
                        </li>
                        <li class="breadcrumb-item">Program Controls</li>
                        <li class="breadcrumb-item active">Create Program</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid starts-->
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-header">
                        <h5>Create New Program Form</h5>
                        <span>Fill out the form below to enroll in a new program.</span>
                    </div>
                    <div class="card-body">
                        <form id="programForm" class="needs-validation" novalidate method="post" asp-action="Create">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label class="form-label" asp-for="prog_name">Program Name</label>
                                    <input asp-for="prog_name" class="form-control" required />
                                    <span asp-validation-for="prog_name" class="text-danger"></span>
                                    <div class="invalid-feedback">Please enter a program name.</div>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label" asp-for="prog_desc">Program Description</label>
                                    <textarea asp-for="prog_desc" class="form-control" required></textarea>
                                    <span asp-validation-for="prog_desc" class="text-danger"></span>
                                    <div class="invalid-feedback">Please enter a program description.</div>
                                </div>
                            </div>
                            <div class="row g-3 mt-3">
                                <div class="col-md-6">
                                    <label class="form-label" asp-for="prog_summary">Program Summary</label>
                                    <textarea asp-for="prog_summary" class="form-control" required></textarea>
                                    <span asp-validation-for="prog_summary" class="text-danger"></span>
                                    <div class="invalid-feedback">Please enter a program summary.</div>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label" asp-for="prog_sessionCount">Session Count</label>
                                    <input asp-for="prog_sessionCount" class="form-control" required />
                                    <span asp-validation-for="prog_sessionCount" class="text-danger"></span>
                                    <div class="invalid-feedback">Please enter the session count.</div>
                                </div>
                            </div>
                            <div class="row g-3 mt-3">
                                <div class="col-md-6">
                                    <label class="form-label" asp-for="prog_step">Step</label>
                                    <input asp-for="prog_step" class="form-control" required />
                                    <span asp-validation-for="prog_step" class="text-danger"></span>
                                    <div class="invalid-feedback">Please enter the step.</div>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label" asp-for="prog_WeekdayPrice">Weekday Price</label>
                                    <input asp-for="prog_WeekdayPrice" class="form-control" type="number" step="0.01" required />
                                    <span asp-validation-for="prog_WeekdayPrice" class="text-danger"></span>
                                    <div class="invalid-feedback">Please enter the weekday price.</div>
                                </div>
                            </div>
                            <div class="row g-3 mt-3">
                                <div class="col-md-6">
                                    <label class="form-label" asp-for="prog_WeekendPrice">Weekend Price</label>
                                    <input asp-for="prog_WeekendPrice" class="form-control" type="number" step="0.01" required />
                                    <span asp-validation-for="prog_WeekendPrice" class="text-danger"></span>
                                    <div class="invalid-feedback">Please enter the weekend price.</div>
                                </div>
                            </div>
                            <div class="row g-3 mt-3">
                                <div class="col-md-6">
                                    <button class="btn btn-primary" type="submit">Create</button>
                                    <button type="button" class="btn btn-secondary ms-2" onclick="clearForm()">Clear form</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid Ends-->
</div>

@section Scripts {
    <script>
        function clearForm() {
            document.getElementById('programForm').reset();
            document.querySelectorAll('.form-control').forEach(function (element) {
                element.classList.remove('is-valid');
                element.classList.remove('is-invalid');
            });
        }

        (function () {
            'use strict';
            window.addEventListener('load', function () {
                var forms = document.getElementsByClassName('needs-validation');
                var validation = Array.prototype.filter.call(forms, function (form) {
                    form.addEventListener('submit', function (event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();
    </script>
}
