@model ADStarter.Models.Program

@{
    ViewData["Title"] = "Edit Program";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-body">
    <div class="container-fluid">
        <div class="page-title">
            <div class="row">
                <div class="col-6">
                    <h3>Edit Program</h3>
                </div>
                <div class="col-6">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a asp-controller="Dashboard" asp-action="Index">
                                <svg class="stroke-icon">
                                    <use href="../assets/svg/icon-sprite.svg#stroke-home"></use>
                                </svg>
                            </a>
                        </li>
                        <li class="breadcrumb-item">Program Controls</li>
                        <li class="breadcrumb-item active">Edit Program</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid starts-->
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-header">
                        <h5>Edit Program Details</h5>
                        <span>Modify the fields below to update the program information.</span>
                    </div>
                    <div class="card-body">
                        <form asp-action="Edit" method="post">
                            <input type="hidden" asp-for="prog_ID" />

                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="row g-3">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="prog_name" class="form-label">Program Name</label>
                                        <input asp-for="prog_name" class="form-control" />
                                        <span asp-validation-for="prog_name" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="prog_desc" class="form-label">Program Description</label>
                                        <textarea asp-for="prog_desc" class="form-control"></textarea>
                                        <span asp-validation-for="prog_desc" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row g-3 mt-3">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="prog_summary" class="form-label">Program Summary</label>
                                        <textarea asp-for="prog_summary" class="form-control"></textarea>
                                        <span asp-validation-for="prog_summary" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="prog_sessionCount" class="form-label">Program Session Count</label>
                                        <input asp-for="prog_sessionCount" class="form-control" />
                                        <span asp-validation-for="prog_sessionCount" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row g-3 mt-3">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="prog_step" class="form-label">Program Step</label>
                                        <input asp-for="prog_step" class="form-control" />
                                        <span asp-validation-for="prog_step" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="prog_WeekdayPrice" class="form-label">Program Weekday Price</label>
                                        <input asp-for="prog_WeekdayPrice" class="form-control" />
                                        <span asp-validation-for="prog_WeekdayPrice" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row g-3 mt-3">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="prog_WeekendPrice" class="form-label">Program Weekend Price</label>
                                        <input asp-for="prog_WeekendPrice" class="form-control" />
                                        <span asp-validation-for="prog_WeekendPrice" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row g-3 mt-3">
                                <div class="col-md-6">
                                    <button type="submit" class="btn btn-primary">Save</button>
                                </div>
                                <div class="col-md-6">
                                    <a asp-action="ListPrograms" class="btn btn-secondary">Cancel</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid Ends-->
</div>
