@model ADStarter.Models.ViewModels.ChildDetailsViewModel

@{
    ViewData["Title"] = "Edit Step";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-body">
    <div class="container-fluid">
        <div class="page-title">
            <h3>Edit Child Step</h3>
        </div>
    </div>

    <div class="container mt-4">
        <div class="card">
            <div class="card-body">
                <form asp-action="UpdateStep" asp-controller="ChildAdmin" asp-area="Admin" method="post">
                    <input type="hidden" asp-for="ChildId" />
                    <div class="form-group">
                        <label asp-for="ChildName">Child Name</label>
                        <input type="text" class="form-control" asp-for="ChildName" readonly />
                    </div>
                    <div class="form-group">
                        <label asp-for="Step">Current Step</label>
                        <input type="text" class="form-control" asp-for="Step" readonly />
                    </div>
                    <div class="form-group">
                        <label for="NewStep">New Step</label>
                        <input type="number" class="form-control" id="NewStep" name="NewStep" required />
                    </div>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                    <a href="@Url.Action("Index", "ChildAdmin", new { area = "Admin" })" class="btn btn-secondary">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>
