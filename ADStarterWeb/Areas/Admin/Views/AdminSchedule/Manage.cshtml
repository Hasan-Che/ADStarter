@model ADStarter.Models.Schedule

@{
    ViewData["Title"] = "Manage Schedule";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2>Manage Schedule</h2>

    <div class="row">
        <div class="col-md-6">
            <dl class="row">
                <dt class="col-sm-4">Child Name:</dt>
                <dd class="col-sm-8">@Model.c_myKid</dd>

                <dt class="col-sm-4">Session Date:</dt>
                <dd class="col-sm-8">@Model.session_datetime.ToShortDateString()</dd>

                <dt class="col-sm-4">Program Name:</dt>
                <dd class="col-sm-8">@Model.Program?.prog_name ?? "Not Assigned"</dd>

                <dt class="col-sm-4">Slot Time:</dt>
                <dd class="col-sm-8">@Model.Slot?.slot_time ?? "Not Assigned"</dd>

                <dt class="col-sm-4">Therapist Name:</dt>
                <dd class="col-sm-8">@Model.Therapist?.t_name ?? "Not Assigned"</dd>
            </dl>

            <div class="form-group">
                <a asp-controller="AdminSchedule" asp-action="Edit" asp-route-id="@Model.schedule_ID" class="btn btn-primary">Edit Schedule</a>
                <button type="button" class="btn btn-danger" onclick="confirmDelete('@Model.schedule_ID')">Delete Schedule</button>
                <a asp-controller="AdminSchedule" asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(id) {
            if (confirm('Are you sure you want to delete this schedule?')) {
                window.location.href = '@Url.Action("Delete", "AdminSchedule")?id=' + id;
            }
        }
    </script>
}
