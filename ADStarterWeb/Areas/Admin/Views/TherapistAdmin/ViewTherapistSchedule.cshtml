@model IEnumerable<ADStarter.Models.ViewModels.TherapistChildScheduleViewModel>

@{
    ViewData["Title"] = "Therapist Schedule";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-body">
    <div class="container-fluid">
        <div class="page-title">
            <h3>Therapist Schedule @ViewBag.TherapistName</h3>
        </div>
    </div>

    <div class="container mt-4">
        <div class="card">
            <div class="card-header">
                <h5>Schedule</h5>
            </div>
            <div class="card-body">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Child Name</th>
                            <th>Program Name</th>
                            <th>Session Date</th>
                            <th>Slot Time</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ChildName</td>
                                <td>@item.ProgramName</td>
                                <td>@item.SessionDateTime.ToString("yyyy-MM-dd")</td>
                                <td>@item.SlotTime</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
