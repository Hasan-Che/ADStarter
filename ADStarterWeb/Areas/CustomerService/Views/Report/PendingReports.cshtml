@model List<ADStarter.Models.ViewModels.PendingReportViewModel>
@{
    ViewData["Title"] = "Pending Reports";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-body">
    <div class="container-fluid">
        <div class="page-title">
            <h3>Pending Reports</h3>
        </div>
    </div>

    <div class="container mt-4">
        <div class="card">
            <div class="card-header">
                <h5>Pending Session Reports</h5>
            </div>
            <div class="card-body">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Child Name</th>
                            <th>Report Date</th>
                            <th>Program Name</th>
                            <th>Slot Time</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ChildName</td>
                                <td>@item.ReportDateTime.ToString("yyyy-MM-dd")</td>
                                <td>@item.ProgramName</td>
                                <td>@item.SlotTime</td>
                                <td>
                                    <a href="@Url.Action("Update", "Report", new { area = "CustomerService", scheduleId = item.ScheduleId })" class="btn btn-primary">Update Report</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
