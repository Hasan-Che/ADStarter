@page
@model LoginModel
@{
    ViewData["Title"] = "Login Simple";
    Layout = "~/Views/Shared/_SimpleLayout.cshtml";
}

<div class="row m-0">
    <div class="col-12 p-0">
        <div class="login-card">
            <div>
                <div>
                    <a class="logo">
                        <img class="img-fluid for-light" src="~/assets/images/logo/logo.png" alt="login page">
                        <img class="img-fluid for-dark" src="~/assets/images/logo/logo_dark.png" alt="login page">
                    </a>
                </div>
                <div class="login-main">
                    <form id="account" method="post" class="theme-form">
                        <h4>Sign in to account</h4>
                        <p>Enter your email & password to login</p>
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            @* <label asp-for="Input.Email" class="col-form-label">Email Address</label> *@
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <div class="form-input position-relative">
                                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                                <label asp-for="Input.Password" class="col-form-label">Password</label>
                                <div class="show-hide"><span class="show"></span></div>
                            </div>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="checkbox mb-3">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            <label class="text-muted" asp-for="Input.RememberMe">Remember password</label>
                        </div>
                        <div>
                            <a class="link" asp-page="./ForgotPassword">Forgot password?</a>
                        </div>
                        <div class="text-end mt-3">
                            <button id="login-submit" type="submit" class="btn btn-primary btn-block w-100">Sign in</button>
                        </div>
                        <h6 class="text-muted mt-4 or">Or Sign in with</h6>
                        <div class="social mt-4">
                            <div class="btn-showcase">
                                @{
                                    if ((Model.ExternalLogins?.Count ?? 0) == 0)
                                    {
                                        <div>
                                            <p>
                                                There are no external authentication services configured. See this
                                                <a href="https://go.microsoft.com/fwlink/?LinkID=532715">article about setting up this ASP.NET application to support logging in via external services</a>.
                                            </p>
                                        </div>
                                    }
                                    else
                                    {
                                        <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                                            <div>
                                                <p>
                                                    @foreach (var provider in Model.ExternalLogins!)
                                                    {
                                                        <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                                                    }
                                                </p>
                                            </div>
                                        </form>
                                    }
                                }
                            </div>
                        </div>
                        <p class="mt-4 mb-0 text-center">
                            Don't have account?
                            <a class="ms-2" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Create Account</a>
                        </p>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
