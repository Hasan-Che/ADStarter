                      button.btn.btn-danger(type='button')
                        | Alert 
                        span.badge.rounded-pill.badge-light.text-dark
                          i(data-feather='alert-circle')

          // Container-fluid Ends
        include ../../components/footer
    include ../../components/footer-files   
