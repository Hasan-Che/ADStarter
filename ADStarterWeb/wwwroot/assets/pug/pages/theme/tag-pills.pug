                    h5
                      | heading 
                      span.badge.badge-primary New
                    h6
                      | heading 
                      span.badge.badge-primary New
              .col-sm-12.col-xl-6
                .card.height-equal
                  .card-header
                    h5 Badges as part buttons
                  .card-body
                    .mb-3
                      button.btn.btn-primary(type='button')
                        | Messages 
                        span.badge.rounded-pill.badge-light.text-dark
                          i(data-feather='mail')
                    .mb-3
                      button.btn.btn-secondary(type='button')
                        | notifications 
                        span.badge.rounded-pill.badge-light.text-dark
                          i(data-feather='bell')
                    .mb-3
                      button.btn.btn-success(type='button')
                        | Update available 
                        span.badge.rounded-pill.badge-light.text-dark
                          i(data-feather='settings')
                    .mb-3
                      button.btn.btn-info(type='button')
                        | Playing Now 
                        span.badge.rounded-pill.badge-light.text-dark
                          i(data-feather='music')
