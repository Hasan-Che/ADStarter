- var theme_customizer      = true;
- var sidebar               = true;
- var slick                 = true;
- var header_slider         = true;
- var animate               = true;
- var scrollbar             = true;
doctype html
html(lang='en')
  include ../../components/header-files
  body
    include ../../components/loader
    include ../../components/taptop
    // page-wrapper Start
    #pageWrapper.page-wrapper.compact-wrapper
      include ../../components/header
      // Page Body Start
      .page-body-wrapper
        include ../../components/sidebar
        .page-body
          .container-fluid
            .page-title
              .row
                .col-6
                  h3
                    | Tag & Pills

                .col-6
                  ol.breadcrumb
                    li.breadcrumb-item
                      a(href='index.html')                                        
                        svg.stroke-icon
                          use(href='../assets/svg/icon-sprite.svg#stroke-home')
                    li.breadcrumb-item  Ui Kits
                    li.breadcrumb-item.active Tag & Pills
          // Container-fluid starts
          .container-fluid
            .row
              .col-sm-12.col-xl-6
                .card
                  .card-header
                    h5 Contextual variations
                  .card-body
                    span.badge.badge-primary Primary
                    span.badge.badge-secondary Secondary
                    span.badge.badge-success Success
                    span.badge.badge-info Info
                    span.badge.badge-warning.text-dark Warning
                    span.badge.badge-danger Danger
                    span.badge.badge-light.text-dark Light
                    span.badge.badge-dark.tag-pills-sm-mb Dark
              .col-sm-12.col-xl-6
                .card
                  .card-header
                    h5 Contextual variations
                  .card-body
                    span.badge.rounded-pill.badge-primary Primary
                    span.badge.rounded-pill.badge-secondary Secondary
                    span.badge.rounded-pill.badge-success Success
                    span.badge.rounded-pill.badge-info Info
                    span.badge.rounded-pill.badge-warning.text-dark Warning
                    span.badge.rounded-pill.badge-danger Danger
                    span.badge.rounded-pill.badge-light.text-dark Light
                    span.badge.rounded-pill.badge-dark.tag-pills-sm-mb Dark
              .col-sm-12.col-xl-6
                .card
                  .card-header
                    h5 Tags with number
                  .card-body
                    a.badge.badge-primary(href='#') 1
                    a.badge.badge-secondary(href='#') 2
                    a.badge.badge-success(href='#') 3
                    a.badge.badge-info(href='#') 4
                    a.badge.badge-warning.text-dark(href='#') 5
                    a.badge.badge-danger(href='#') 6
                    a.badge.badge-light.text-dark(href='#') 7
                    a.badge.badge-dark(href='#') 8
              .col-sm-12.col-xl-6
                .card
                  .card-header
                    h5 Pills with number
                  .card-body
                    span.badge.rounded-pill.badge-primary 1
                    span.badge.rounded-pill.badge-secondary 2
                    span.badge.rounded-pill.badge-success 3
                    span.badge.rounded-pill.badge-info 4
                    span.badge.rounded-pill.badge-warning.text-dark 5
                    span.badge.rounded-pill.badge-danger 6
                    span.badge.rounded-pill.badge-light.text-dark 7
                    span.badge.rounded-pill.badge-dark 8
              .col-sm-12.col-xl-6
                .card
                  .card-header
                    h5 Tags With icon
                  .card-body
                    a.badge.badge-primary(href='#')
                      i(data-feather='dollar-sign')
                    a.badge.badge-secondary(href='#')
                      i(data-feather='headphones')
                    a.badge.badge-success(href='#')
                      i(data-feather='link')
                    a.badge.badge-info(href='#')
                      i(data-feather='github')
